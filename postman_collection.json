{
  "info": {
    "name": "Policy Toggle Service API",
    "description": "Complete API collection for Policy-Driven Feature Toggle & Rate Guard Service",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{accessToken}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "adminToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{baseUrl}}/auth/register",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\",\n  \"firstName\": \"Test\",\n  \"lastName\": \"User\"\n}"
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('accessToken', response.data.tokens.accessToken);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{baseUrl}}/auth/login",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"User@123456\"\n}"
            }
          }
        },
        {
          "name": "Login as Admin",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('adminToken', response.data.tokens.accessToken);",
                  "    pm.environment.set('accessToken', response.data.tokens.accessToken);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{baseUrl}}/auth/login",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"Admin@123456\"\n}"
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/auth/me"
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{baseUrl}}/auth/profile",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"Updated\",\n  \"lastName\": \"Name\"\n}"
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/auth/logout"
          }
        }
      ]
    },
    {
      "name": "Features",
      "item": [
        {
          "name": "Get All Features",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/features"
          }
        },
        {
          "name": "Get Enabled Features",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/features/enabled"
          }
        },
        {
          "name": "Check Feature Access",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{baseUrl}}/features/check",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"featureName\": \"premium-features\"\n}"
            }
          }
        },
        {
          "name": "Create Feature (Admin)",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [{ "key": "token", "value": "{{adminToken}}" }]
            },
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{baseUrl}}/features",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"featureName\": \"new-feature\",\n  \"description\": \"New feature description\",\n  \"enabled\": true,\n  \"allowedRoles\": [\"admin\", \"user\"],\n  \"rolloutPercentage\": 100\n}"
            }
          }
        },
        {
          "name": "Get Feature Stats (Admin)",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [{ "key": "token", "value": "{{adminToken}}" }]
            },
            "method": "GET",
            "url": "{{baseUrl}}/features/stats"
          }
        }
      ]
    },
    {
      "name": "Rate Guards",
      "item": [
        {
          "name": "Get All Rate Guards",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/rate-guards"
          }
        },
        {
          "name": "Test Rate Limit",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{baseUrl}}/rate-guards/test",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"routePath\": \"/api/upload\",\n  \"method\": \"POST\"\n}"
            }
          }
        },
        {
          "name": "Create Rate Guard (Admin)",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [{ "key": "token", "value": "{{adminToken}}" }]
            },
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{baseUrl}}/rate-guards",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"routePath\": \"/api/test\",\n  \"method\": \"POST\",\n  \"description\": \"Test rate limit\",\n  \"enabled\": true,\n  \"limits\": {\n    \"admin\": {\"maxRequests\": 100, \"windowMs\": 60000},\n    \"user\": {\"maxRequests\": 20, \"windowMs\": 60000},\n    \"guest\": {\"maxRequests\": 5, \"windowMs\": 60000}\n  }\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Users (Admin)",
      "item": [
        {
          "name": "Get All Users",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [{ "key": "token", "value": "{{adminToken}}" }]
            },
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/users?page=1&limit=10",
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "10" }
              ]
            }
          }
        },
        {
          "name": "Get User Stats",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [{ "key": "token", "value": "{{adminToken}}" }]
            },
            "method": "GET",
            "url": "{{baseUrl}}/users/stats"
          }
        }
      ]
    },
    {
      "name": "Audit (Admin)",
      "item": [
        {
          "name": "Get Audit Logs",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [{ "key": "token", "value": "{{adminToken}}" }]
            },
            "method": "GET",
            "url": "{{baseUrl}}/audit"
          }
        },
        {
          "name": "Get Failed Actions",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [{ "key": "token", "value": "{{adminToken}}" }]
            },
            "method": "GET",
            "url": "{{baseUrl}}/audit/failed"
          }
        },
        {
          "name": "Get Audit Stats",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [{ "key": "token", "value": "{{adminToken}}" }]
            },
            "method": "GET",
            "url": "{{baseUrl}}/audit/stats"
          }
        }
      ]
    },
    {
      "name": "System",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "auth": { "type": "noauth" },
            "method": "GET",
            "url": "{{baseUrl}}/health"
          }
        },
        {
          "name": "System Status",
          "request": {
            "auth": { "type": "noauth" },
            "method": "GET",
            "url": "{{baseUrl}}/status"
          }
        }
      ]
    }
  ]
}
